# Server Configuration
PORT=5000

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024 = 10485760 bytes

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# Storage Paths (relative to backend directory)
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed

# Cleanup Configuration
# Time in milliseconds to keep files before cleanup (default: 1 hour)
FILE_CLEANUP_INTERVAL=3600000
FILE_MAX_AGE=3600000

# Optional: Replicate API token for cloud AI upscaling
# Get yours at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=
